<div ng-controller="app.views.home as vm">
    <h1>Bienvenido a La Asociación de Personas con Súper Poderes</h1>
    <div class="row">
        <div class="col-md-6">
            <h3>Seleccione el archivo</h3>
            <input type="file" on-read-file="showContent($fileContent)" />
            <br />
            <button class="form-control btn btn-success" ng-if="content" ng-click="vm.classifyHeroesAndVillains()">
                Clasificar Superhéroes y Villanos
            </button>
            <br />
            <div ng-if="content">
                <h2>El archivo es:</h2>
                <pre>{{ content }}</pre>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row" ng-if="content">
                <div class="col-md-6">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>
                                    <strong>Héroes</strong>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="hero in vm.listHeroes">
                                <td>
                                    {{hero.name}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>
                                    <strong>Villanos</strong>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="villain in vm.listVillains">
                                <td>
                                    {{villain.name}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>